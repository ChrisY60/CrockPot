@model CrockPot.Models.Recipe
@using CrockPot.Data
<link rel="stylesheet" href="Style.css">
@{
    ViewData["Title"] = "Create"; 
}

<h1>Create</h1>

<h4>Recipe</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label>Select Ingredients</label>
                <br />
                <input type="text" placeholder="Search..." id="ingredientsSearch">
                <div class="scrollable-container">
                    
                    @foreach (var ingredient in ViewBag.allIngredients)
                    {
                        <div class="form-check ingredient-checkbox">
                            <input class="form-check-input" type="checkbox" name="selectedIngredients" value="@ingredient.Id">
                            <label class="form-check-label">@ingredient.Name</label>
                        </div>
                    }
                </div>
            </div>

            <div class="form-group">
                <label asp-for="AuthorId" class="control-label"></label>
                <input asp-for="AuthorId" class="form-control" />
                <span asp-validation-for="AuthorId" class="text-danger"></span>
            </div>



            <div class="form-group">
                <label>Select Categories</label>
                <br />
                <input type="text" placeholder="Search..." id="categoriesSearch">
                <div class="scrollable-container">
                    
                    @foreach (var category in ViewBag.allCategories)
                    {
                        <div class="form-check category-checkbox">
                            <input class="form-check-input" type="checkbox" name="selectedCategories" value="@category.Id">
                            <label class="form-check-label">@category.Name</label>
                        </div>
                    }
                </div>
            </div>
            <br />

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>

        function filterCategoriesCheckboxes(checkbox) {
            var label = checkbox.querySelector('.form-check-label');
            var categoryName = label.textContent.toLowerCase();
            var searchCategoryValue = document.getElementById("categoriesSearch").value.toLowerCase();

            if (categoryName.includes(searchCategoryValue)) {
                checkbox.style.display = 'block';
            } else {
                checkbox.style.display = 'none';
            }
        }

        function filterIngredientsCheckboxes(checkbox) {
            var label = checkbox.querySelector('.form-check-label');
            var ingredientName = label.textContent.toLowerCase();
            var searchIngredientValue = document.getElementById("ingredientsSearch").value.toLowerCase();


            if (ingredientName.includes(searchIngredientValue)) {
                checkbox.style.display = 'block';
            } else {
                checkbox.style.display = 'none';
            }
        }

        document.getElementById("categoriesSearch").addEventListener("input", function () {
            var searchCategoryValue = this.value.toLowerCase();
            var categoryCheckboxes = document.querySelectorAll('.category-checkbox');
            categoryCheckboxes.forEach(filterCategoriesCheckboxes);
        });

        document.getElementById("ingredientsSearch").addEventListener("input", function() {
            var searchIngredientValue = this.value.toLowerCase();
            var ingredientCheckboxes = document.querySelectorAll('.ingredient-checkbox');
            ingredientCheckboxes.forEach(filterIngredientsCheckboxes);
        });
    </script>
}